%h3= e.author.try(:email)
.entry
  .meta
    Published at
    %span.date= e.created_at
  .body
    = e.content.html_safe
  .comments
    %h5 Comments on this entry
  
    - e.comments.each do |comment|
      = render :partial => 'comments/show', :locals => {:@comment => comment}
  
    .new_comment
      = render :partial => 'comments/form', :locals => {:@entry => e, :@comment => e.comments.new}
