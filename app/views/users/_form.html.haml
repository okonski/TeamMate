= simple_form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:

      %ul
      - @user.errors.full_messages.each do |msg|
        %li= msg

  .inputs
    = f.input :name
    = f.input :gender
    = f.input :country
    = f.input :age
    = f.association :profile
    = f.association :hardware
    = f.input :signature

  .actions
    = f.button :submit
