source 'http://rubygems.org'

# Core
gem 'rails', '3.0.3'
gem 'mysql2'
gem 'devise'
gem 'haml'

# Generators
gem 'haml-rails'

# Permissions
gem 'cancan'

# Forms
gem 'formtastic'
gem 'validation_reflection'

# Views
gem 'will_paginate'
gem 'simple-navigation'
gem 'active_scaffold'
gem 'show_for'

# Controllers
gem 'inherited_resources'
gem 'has_scope'

# Extensions
gem 'acts_as_commentable'
gem 'acts-as-taggable-on'

# Theming
gem 'themes_for_rails'

# Testing
group :development, :test do
  gem 'rspec-core'
  gem 'rspec-rails'
  gem 'mocha'
end
