= simple_form_for(@entry) do |f|
  - if @entry.errors.any?
    #error_explanation
      %h2
        = pluralize(@entry.errors.count, "error")
        prohibited this entry from being saved:

      %ul
      - @entry.errors.full_messages.each do |msg|
        %li= msg

  .inputs
    = f.input :title
    = f.input :content
    = f.association :category

  .actions
    = f.button :submit
